<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:UI.Controls.Base"
    xmlns:button="clr-namespace:UI.Controls.Button"
    xmlns:input="clr-namespace:UI.Controls.Input"
    xmlns:w="clr-namespace:UI.Controls.Window">
    <Style x:Key="WindowSystemButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="/Tai;component/Resources/Fonts/#Segoe MDL2 Assets" />
        <Setter Property="Foreground" Value="{DynamicResource TitleBarBtnBrush}" />
        <!--<Setter Property="FontWeight" Value="Bold"/>-->
        <Setter Property="FontSize" Value="10" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                        <ContentPresenter
                            Name="Presenter"
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            RecognizesAccessKey="True"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="false">
                            <!--<Setter Property="Foreground" Value="{DynamicResource ButtonTextDisabled}"/>-->
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryColorBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ThemeBrush}" />
                            <!--<Setter Property="Background" Value="{DynamicResource ButtonBackgroundPressed}" />
                            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderPressed}"/>-->
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="true">
                            <!--<Setter TargetName="Chrome" Property="BorderBrush" Value="{DynamicResource Accent}" />-->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type w:DefaultWindow}">
        <!--<Setter Property="BorderThickness" Value="1" />-->
        <!--<Setter Property="BorderBrush" Value="{DynamicResource WindowBorderBrush}" />-->
        <Setter Property="Background" Value="Transparent" />
        <!--<Setter Property="Logo" Value="{DynamicResource WindowLogo}" />-->
        <Setter Property="Foreground" Value="{DynamicResource StandardTextBrush}" />
        <!--  设置Window窗体为圆角  设置WPF窗体为无边框窗体  -->
        <!--<Setter Property="WindowStyle" Value="None" />-->
        <Setter Property="ResizeMode" Value="CanResizeWithGrip" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
        <Setter Property="WindowChrome.WindowChrome">
            <!--
                WindowChrome:  WindowChrome 重新Window non-client area(即chrome)的外观和行为。允许将工作区的扩展至整个窗口。但是在WindowChrome的区域不能交互。如果要交互 就必须设置WindowChrome区域元素的
                
                命中测试
            -->
            <!--
                1、非工作区（no-client-area）=标题栏+窗体边框 FrameThickness
                2、CaptionHeight指定WindowChrome的标题栏高度
                3、UseAeroCaptionButtons="False"，最大，最小，关闭按钮将不会命中。
                4、若要在标题区域中启用交互式元素，请将 IsHitTestVisibleInChrome 附加属性附加到元素并将其设置为 true
            -->
            <!--
                1、工作区（client area）：处于窗体图层的中间层，显示窗体布局
                2、CornerRadius 属性: 控制工作区 边角弧度
                3、
            -->
            <Setter.Value>
                <WindowChrome
                    CaptionHeight="32"
                    CornerRadius="0"
                    GlassFrameThickness="1"
                    NonClientFrameEdges="None"
                    UseAeroCaptionButtons="False" />
            </Setter.Value>
        </Setter>
        <!--  设置Window Control控件模板  -->
        <!--  修改圆角Windows圆角  -->
        <!--  重新构建Window类的Template控件模板  -->
        <!--  标准窗口由两个重叠的矩形组成。 外部矩形（灰色）是 非工作区WindowChrome，内部矩形（白色）是 工作区(client area )。  -->
        <!--  参考文章链接: https://www.cnblogs.com/cdaniu/p/16875714.html  -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type w:DefaultWindow}">
                    <ControlTemplate.Resources>
                        <!--  DefaultWindow控件模板资源  -->
                        <Storyboard x:Key="Storyboardload">
                            <DoubleAnimation
                                Storyboard.TargetName="WindowBorder"
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="00:00:0.1" />
                        </Storyboard>

                    </ControlTemplate.Resources>
                    <Border
                        x:Name="WindowBorder"
                        Margin="{Binding Source={x:Static SystemParameters.WindowNonClientFrameThickness}}"
                        CornerRadius="20">
                        <Border
                            Background="{DynamicResource WindowBackground}"
                            BorderBrush="{DynamicResource WindowBorderBrush}"
                            BorderThickness="1">
                            <!--  装饰器  -->
                            <AdornerDecorator>
                                <Grid x:Name="WindowContent">

                                    <!--<Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>

                                    </Grid.RowDefinitions>-->

                                    <!--  标题栏  -->
                                    <Grid
                                        x:Name="TitleBar"
                                        Height="{DynamicResource WindowTitleBarHeight}"
                                        VerticalAlignment="Top"
                                        Panel.ZIndex="999">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />

                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0" Panel.ZIndex="3">
                                            <!--  标题区域  -->
                                            <StackPanel
                                                Margin="15,0,0,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">

                                                <button:IconButton
                                                    x:Name="BackBtn"
                                                    Width="0"
                                                    VerticalAlignment="Center"
                                                    Command="{x:Static w:DefaultWindowCommands.BackCommand}"
                                                    FontSize="10"
                                                    Icon="Back"
                                                    ToolTip="返回"
                                                    WindowChrome.IsHitTestVisibleInChrome="True" />

                                                <Image
                                                    Width="18"
                                                    VerticalAlignment="Center"
                                                    Source="{TemplateBinding Icon}"
                                                    Stretch="Uniform" />
                                                <TextBlock
                                                    Margin="15,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Foreground="{DynamicResource DefaultTextBrush}"
                                                    IsEnabled="{TemplateBinding IsActive}"
                                                    Text="{TemplateBinding Title}" />
                                            </StackPanel>


                                        </Grid>
                                        <Grid
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Panel.ZIndex="3"
                                            WindowChrome.IsHitTestVisibleInChrome="True">
                                            <!--  系统按钮区域  -->

                                            <StackPanel Orientation="Horizontal">
                                                <!--  最小化  -->
                                                <button:IconButton
                                                    Width="46"
                                                    Height="32"
                                                    Command="{x:Static w:DefaultWindowCommands.MinimizeWindowCommand}"
                                                    FontSize="10"
                                                    Icon="ChromeMinimize"
                                                    ToolTip="最小化"
                                                    Visibility="{TemplateBinding MinimizeVisibility}" />

                                                <!--  最大化  -->
                                                <button:IconButton
                                                    x:Name="MaximizeButton"
                                                    Width="46"
                                                    Height="32"
                                                    Command="{x:Static w:DefaultWindowCommands.MaximizeWindowCommand}"
                                                    FontSize="10"
                                                    Icon="ChromeMaximize"
                                                    ToolTip="最大化"
                                                    Visibility="{TemplateBinding MaximizeVisibility}" />
                                                <!--  还原  -->
                                                <button:IconButton
                                                    x:Name="RestoreButton"
                                                    Width="46"
                                                    Height="32"
                                                    Command="{x:Static w:DefaultWindowCommands.RestoreWindowCommand}"
                                                    FontSize="10"
                                                    Icon="ChromeRestore"
                                                    ToolTip="向下还原"
                                                    Visibility="Collapsed" />
                                                <!--  关闭  -->
                                                <button:IconButton
                                                    Width="46"
                                                    Height="32"
                                                    Command="{x:Static w:DefaultWindowCommands.CloseWindowCommand}"
                                                    FontSize="10"
                                                    Icon="ChromeClose"
                                                    ToolTip="关闭"
                                                    Visibility="{TemplateBinding CloseVisibility}" />

                                            </StackPanel>


                                        </Grid>
                                    </Grid>



                                    <!--  窗体内容  -->
                                    <ContentPresenter Grid.Row="1" />
                                    <!--  提醒框  -->
                                    <Grid
                                        x:Name="ToastGrid"
                                        Panel.ZIndex="999"
                                        Visibility="Collapsed">
                                        <!--  内容  -->
                                        <Border
                                            x:Name="ToastBorder"
                                            MaxWidth="320"
                                            Padding="15,15"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Panel.ZIndex="99999"
                                            Background="White"
                                            CornerRadius="12">
                                            <Border.RenderTransform>
                                                <TransformGroup>
                                                    <TranslateTransform Y="-150" />
                                                </TransformGroup>
                                            </Border.RenderTransform>
                                            <Border.Effect>
                                                <DropShadowEffect
                                                    BlurRadius="10"
                                                    Opacity=".1"
                                                    Color="Black" />
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30" />
                                                    <ColumnDefinition Width="*" />

                                                </Grid.ColumnDefinitions>
                                                <base:Icon
                                                    x:Name="ToastIcon"
                                                    Margin="0,0,10,0"
                                                    VerticalAlignment="Top"
                                                    IconType="{TemplateBinding ToastIcon}" />
                                                <TextBlock
                                                    x:Name="ToastText"
                                                    Grid.Column="1"
                                                    VerticalAlignment="Top"
                                                    Text="{TemplateBinding ToastContent}"
                                                    TextWrapping="WrapWithOverflow" />
                                            </Grid>
                                        </Border>
                                        <!--  Dialog  -->
                                        <Border
                                            x:Name="DialogBorder"
                                            Width="300"
                                            Padding="15,15"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Panel.ZIndex="1000"
                                            Background="White"
                                            CornerRadius="10">
                                            <Border.RenderTransform>
                                                <TransformGroup>
                                                    <TranslateTransform Y="-150" />
                                                </TransformGroup>
                                            </Border.RenderTransform>
                                            <Border.Effect>
                                                <DropShadowEffect
                                                    BlurRadius="10"
                                                    Opacity=".1"
                                                    Color="Black" />
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="40" />
                                                    <RowDefinition Height="auto" />
                                                    <RowDefinition Height="auto" />
                                                </Grid.RowDefinitions>
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="{TemplateBinding DialogTitle}" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    VerticalAlignment="Top"
                                                    Text="{TemplateBinding DialogMessage}"
                                                    TextWrapping="WrapWithOverflow" />
                                                <StackPanel
                                                    Grid.Row="2"
                                                    Margin="0,20,0,0"
                                                    HorizontalAlignment="Right"
                                                    Orientation="Horizontal">
                                                    <button:Button x:Name="CancelBtn" Width="100">取消</button:Button>
                                                    <button:Button
                                                        x:Name="ConfirmBtn"
                                                        Width="100"
                                                        Margin="10,0,0,0"
                                                        Background="{DynamicResource ThemeBrush}"
                                                        Foreground="White">
                                                        确定
                                                    </button:Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <!--  Dialog  -->
                                        <Border
                                            x:Name="InputModalBorder"
                                            Width="350"
                                            Padding="15,15"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Panel.ZIndex="1000"
                                            Background="White"
                                            CornerRadius="10">
                                            <Border.RenderTransform>
                                                <TransformGroup>
                                                    <TranslateTransform Y="-150" />
                                                </TransformGroup>
                                            </Border.RenderTransform>
                                            <Border.Effect>
                                                <DropShadowEffect
                                                    BlurRadius="10"
                                                    Opacity=".1"
                                                    Color="Black" />
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="40" />
                                                    <RowDefinition Height="auto" />
                                                    <RowDefinition Height="auto" />
                                                </Grid.RowDefinitions>
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="{TemplateBinding DialogTitle}" />
                                                <Border Grid.Row="1">
                                                    <input:InputBox x:Name="InputModalInputBox" Placeholder="{TemplateBinding DialogMessage}" />
                                                </Border>
                                                <StackPanel
                                                    Grid.Row="2"
                                                    Margin="0,10,0,0"
                                                    HorizontalAlignment="Right"
                                                    Orientation="Horizontal">
                                                    <button:Button x:Name="InputModalCancelBtn" Width="100">取消</button:Button>
                                                    <button:Button
                                                        x:Name="InputModalConfirmBtn"
                                                        Width="100"
                                                        Margin="10,0,0,0"
                                                        Background="{DynamicResource ThemeBrush}"
                                                        Foreground="White">
                                                        确定
                                                    </button:Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <!--  遮罩层  -->
                                        <Border
                                            x:Name="Masklayer"
                                            Background="Black"
                                            Opacity="0" />
                                    </Grid>
                                </Grid>
                            </AdornerDecorator>
                        </Border>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0:0:.15" />
                                    <VisualTransition GeneratedDuration="0" To="Pressed" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="CanBackState">
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="BackBtn"
                                            Storyboard.TargetProperty="(Button.Width)"
                                            To="35"
                                            Duration="0:0:.1" />
                                    </Storyboard>
                                </VisualState>

                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ToastType" Value="Success">
                            <Setter TargetName="ToastBorder" Property="Background" Value="#24bf5f" />
                            <Setter TargetName="ToastIcon" Property="Foreground" Value="#fff" />
                            <Setter TargetName="ToastText" Property="Foreground" Value="#fff" />
                        </Trigger>
                        <Trigger Property="ToastType" Value="Error">
                            <Setter TargetName="ToastBorder" Property="Background" Value="#f54f4e" />
                            <Setter TargetName="ToastIcon" Property="Foreground" Value="#fff" />
                            <Setter TargetName="ToastText" Property="Foreground" Value="#fff" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="WindowState" Value="Normal" />
                                <Condition Property="MaximizeVisibility" Value="Visible" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="MaximizeButton" Property="Visibility" Value="Visible" />
                            <Setter TargetName="RestoreButton" Property="Visibility" Value="Collapsed" />
                        </MultiTrigger>
                        <Trigger Property="WindowState" Value="Maximized">
                            <!--  最大化时调整外边距，否则显示不完整  -->
                            <Setter TargetName="WindowContent" Property="Margin" Value="7" />
                            <Setter TargetName="MaximizeButton" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="RestoreButton" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <!--<Trigger Property="IsCanBack" Value="True">
                            <Setter TargetName="BackBtn" Property="Visibility" Value="Visible" />
                        </Trigger>-->
                        <!--<Trigger Property="WindowState" Value="Normal">
                            <Setter TargetName="MaximizeButton" Property="Visibility" Value="Visible" />
                            <Setter TargetName="RestoreButton" Property="Visibility" Value="Collapsed" />
                        </Trigger>-->
                        <!--<EventTrigger RoutedEvent="Window.Loaded">
                        -->
                        <!--  窗口载入动画  -->
                        <!--
                            <BeginStoryboard Storyboard="{StaticResource Storyboardload}">
                            </BeginStoryboard>

                        </EventTrigger>-->
                        <Trigger Property="WindowStyle" Value="None">
                            <Setter TargetName="WindowBorder" Property="Margin" Value="0" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter TargetName="TitleBar" Property="Visibility" Value="Collapsed" />
                            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
                            <!--<Setter Property="BorderBrush" Value="Transparent" />-->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>


</ResourceDictionary>